{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",
    "useDefineForClassFields": false,
    "declaration": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*"
  ]
}